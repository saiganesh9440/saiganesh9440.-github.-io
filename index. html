<body>
  <h1>Bus Ticket Charges</h1>
  <div class="form-container">
    <form id="ticket-form">
      <div class="form-group">
        <label for="distance">Distance (in km)</label>
        <input type="number" id="distance" name="distance" placeholder="Enter distance in km" required>
      </div>
      <div class="form-group">
        <label for="passenger-type">Passenger Type</label>
        <select id="passenger-type" name="passenger-type">
          <option value="adult">Adult</option>
          <option value="child">Child</option>
          <option value="senior">Senior Citizen</option>
        </select>
      </div>
      <button type="button" onclick="calculateFare()">Calculate Fare</button>
    </form>
    <div id="result"></div>
  </div>
  <script>
    function calculateFare() {
      const distance = parseFloat(document.getElementById("distance").value);
      const passengerType = document.getElementById("passenger-type").value;

      if (isNaN(distance) || distance <= 0) {
        alert("Please enter a valid distance.");
        return;
      }

      let ratePerKm = 10; // Base rate for adults
      if (passengerType === "child") {
        ratePerKm = 5; // Discounted rate for children
      } else if (passengerType === "senior") {
        ratePerKm = 7; // Discounted rate for senior citizens
      }

      const totalFare = distance * ratePerKm;
      document.getElementById("result").textContent = `Total Fare: â‚¹${totalFare.toFixed(2)}`;
    }
  </script>
